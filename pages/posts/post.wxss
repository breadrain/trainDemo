.chooseCity {
  box-sizing: border-box;
  padding-top: 0.96rem;
  background-color: #fff;
  border-bottom: 1px solid #cececf;
  overflow: hidden;
}

.pdt-0 {
  padding-top: 0;
}

.chooseCity .citySelect {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-direction: row;
      flex-direction: row;
  -ms-flex-pack: justify;
      justify-content: space-between;
  height: 2.667rem;
  line-height: 2.667rem;
  font-size: 42rpx;
}

.chooseCity .citySelect .hotelCity {
  width: 100%;
  border-bottom: 1px solid #F0EFF5;
  color: #4A586A;
}

.chooseCity .citySelect .startCity {
  width: 6.187rem;
  border-bottom: 1px solid #F0EFF5;
  color: #4A586A;
}

.chooseCity .citySelect .citySelect_img {
  width: 2rem;
  height: 2rem;
  position: relative;
  margin-top: 0.533rem;
  -webkit-filter: grayscale(100%);
}

.chooseCity .citySelect .citySelect_img view {
  position: absolute;
  z-index: 99;
  left: 50%;
  top: 50%;
  margin: -1rem 0 0 -0.7rem;
}

.chooseCity .citySelect .citySelect_img view .changeCity_bg {
  width: 1.4rem;
  height: 1.4rem;
  background-image: url("../../images/train-index-jb.png");
  background-repeat: no-repeat;
  background-size: 4rem;
  background-position: -2rem 0;
}

.chooseCity .citySelect .endCity {
  width: 6.187rem;
  border-bottom: 1px solid #F0EFF5;
  text-align: right;
  color: #4A586A;
}

.chooseDate {
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  -ms-flex-pack: justify;
  justify-content: space-between;
  height: 2.4rem;
  line-height: 2.4rem;
}

.date {
  font-size: 30rpx;
  margin-right: 1.067rem;
}

.week {
  color: #929fb1;
  font-size: 26rpx;
}

.title {
  color: #888;
  width: 100%;
  height: 2.13rem;
  line-height: 2.13rem;
  padding: 0 1rem;
  border-bottom: 1px solid #cececf;
  font-size: 30rpx;
}

.text {
  font-size: 24rpx;
  color: #536277;
  margin-right: 0.266667rem;
}

.sureBtn {
  color: #fff;
  background-color: #58a4ef;
  width: 90%;
  margin-top: 1.333333rem;
}